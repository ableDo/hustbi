.top-nav-list, .entry-nav-list {
  text-align: center;
  width: 74%;
  white-space: nowrap;
}

  .top-nav-list-item, .entry-nav-list-item {
  display: inline-block;
  width: 33.333%;
  height: 0;
  padding-bottom: 36.148%;
  position: relative;
}

.top-nav-list-item image, .entry-nav-list-item image {
  width: 100%;
  height: 100%;
  position: absolute;
  transform: scale(0.74);
}

.top-nav-list-item label, .entry-nav-list-item label {
  color: rgb(44,154,66);
  width: 100%;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  position: absolute;
  bottom: -30rpx;
}

