.rule {
  height: 60rpx;
  text-align: center;

  position: absolute;

  margin: auto;
  margin-top: 20px;
  left: 0;
  right: 0;


  /* bottom: 3%; */

  font-size: 30rpx;

  color: rgb(59,185,33)
}

.rule .text {
  height: 60rpx;
  line-height: 60rpx;   
  border-bottom: solid 1px rgb(59,185,33);
  display: inline-block;
}

.logos {
  position: fixed;
  right: 2vw;
  top: 2vw;


  width: 10vw;
  height: 4.32432vw;

  transform: scale(2);
  transform-origin: 100% 0;
}

.logos image {
  position: absolute;
  width: 100%;
  height: 100%;
}