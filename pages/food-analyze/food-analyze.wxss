/* pages/food-analyze/food-analyze.wxss */

.main-title {
  font-size: 20px;

  color: #2C9A42;

  text-align: center;

  margin: 10% auto 7%;
}

.numbers {
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
}

.numbers > view {
  width: 33.3333vw;
  position: relative;
}

.left-number, .right-number {
  height: 33.3333vw;
  display: flex;
  flex-direction: column;
  justify-content: center;

  transform: translateY(-10%);
}

.left-number > view, .right-number > view {
  text-align: center;
  font-size: 14px;
}

.left-number .text-1, .right-number .text-1 {
  color: #BCBCBC;
}

.left-number .text-2, .right-number .text-2 {
  color: #2C9A42;
}


.center-number {
  height: 33.3333vw;
}

.center-number image {
  position: absolute;
  width:100%;
  height:100%;
}

.center-number view {
  position: absolute;
  color: #fff;
  text-align: center;
  width: 100%;
  height: 100%;
  line-height: 33.3333vw;
  font-size: 24px;
}

.meals {
  margin: 5% 0 0;
  display: flex;
  flex-direction: row;

  justify-content: center;

  flex-shrink: 0;
  
}

.meal {
  width:  20vw;
  height: 20vw;
  position: relative;
  border-radius: 50%;
  background-color: #34CD1B;

  transform: scale(0.6);

  box-shadow: 0px 8px 24px RGBA(52, 205, 27, 0.35);
}

.meal image {
  position: absolute;

  width: 100%;
  height:100%;

  transform: scale(0.5)translateY(-20%);
}

.meal label {
  display: inline-block;

  width: 100%;

  text-align: center;
  position: absolute;

  bottom:10%;

  font-size: 14px;
  color: #fff;
}

.list .list-head {
  font-size: 14px;
  line-height: 20px;
  height: 20px;
}

.list {
  margin-top: 3%;
  padding: 0 10%;
}

.list .list-head > .dot {
  display: inline-block;
  background-color: #3AB921;
  height: 20px;
  width: 20px;
  border-radius: 10px;

  transform: scale(0.2)
}

.list .list-head > .text {
  display: inline-block;
  color: #3AB921;
  height: 20px;

  vertical-align: top;
}

.list > view {
  margin-bottom: 10px;
}

.list .list-item {
  background-color: #F8F8F8;
  height: 76px;
  margin-top: 8px;
  border-radius: 4px;

  padding: 13px;

  box-sizing: border-box;

  display: flex;
  flex-direction: row;

  overflow: hidden;
}

.list .list-item .left-img {
  height: 50px;
  width: 50px;
  position: relative;

  flex-shrink: 0;
}

.list .list-item .left-img image {
  width: 100%;
  height: 100%;
  position: absolute;
}

.list .text {
  padding: 0 10px;
  flex: 1;
}

.list .text .title {
  color: #2C9A42;
  font-size: 16px;

  line-height: 25px;
  height: 25px;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.list .text .content {
  color: #BCBCBC;
  font-size: 14px;

  line-height: 25px;
  height: 25px;
}

.list .right-text {
  flex-shrink: 0;
  color: #BCBCBC;
  font-size: 16px;

  line-height: 50px;
}

.no-meals {
  font-size: 16px;
  text-align: center;
  margin-top: 30vw;

  color: rgb(214,245,208)
}