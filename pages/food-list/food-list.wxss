/* pages/food-list/food-list.wxss */

page{
    height: 100%
}

.input-wrapper {
  background-color: #EEEEEE;
  border-radius: 16px;
  height: 32px;
  width: 80vw;
  margin: 13px auto;
  padding: 0 16px;
}

.input-wrapper input {
  font-size: 14px;
  height: 32px;
  line-height: 32px;

  color: #2C9A42;
}


/** copied CSS **/
.list {
  flex: 1;
  margin: auto;
  margin-top: 3%;
  width: 90vw;

  overflow: scroll;
}

.list .list-head > .dot {
  display: inline-block;
  background-color: #3AB921;
  height: 20px;
  width: 20px;
  border-radius: 10px;

  transform: scale(0.2)
}

.list .list-head > .text {
  display: inline-block;
  color: #3AB921;
  height: 20px;

  vertical-align: top;
}

.list > view {
  margin-bottom: 10px;
}

.list .list-item {
  /* background-color: #F8F8F8; */
  height: 76px;
  margin-top: 8px;
  border-radius: 4px;

  padding: 13px;

  box-sizing: border-box;

  display: flex;
  flex-direction: row;

  overflow: hidden;
}

.list .list-item .left-img {
  height: 50px;
  width: 50px;
  position: relative;

  flex-shrink: 0;
}

.list .list-item .left-img image {
  width: 100%;
  height: 100%;
  position: absolute;
}

.list .text {
  padding: 0 10px;
  flex: 1;
}

.list .text .title {
  color: #2C9A42;
  font-size: 16px;

  line-height: 25px;
  height: 25px;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.list .text .content {
  color: #BCBCBC;
  font-size: 14px;

  line-height: 25px;
  height: 25px;
}

.list .right-text {
  flex-shrink: 0;
  color: #BCBCBC;
  font-size: 16px;

  line-height: 50px;
}

/** end Copied CSS **/

.list .list-item .line,
.list .list-item .h {  
  width: 10px;
  height: 2px;
  background-color: #fff;
  margin-top: 9px;
  margin-left: 5px;

  transform: scaleY(0.5)
}

.list .list-item .v {
  width: 2px;
  height: 10px;
  background-color: #fff;
  margin-top: 5px;
  margin-left: 9px;

  transform: scaleX(0.5);

  position: absolute;
  top: 0;
}


.list .list-item .de, .list .list-item .in {
  background-color: #3AB921;
  border-radius: 10px;
  width: 20px;
  height: 20px;

  margin-top: 15px;

  position: relative;
}

.list .list-item .de.disabled {
  background-color: transparent
}

.list .list-item .de.disabled .line {
 background-color: #bcbcbc;
}

.list .list-item .amount {
  height: 24px;
  margin: 13px 5px;
  background-color: #F8F8F8;
  border-radius: 4px;

  font-size: 14px;
  color: #2C9A42;

  text-align: center;
  min-width: 16px;

  line-height: 24px;
}

.list .last-list-item {
  height: 30vw;
}


.float-button {
  position: fixed;
  width: 12vw;
  height: 12vw;

  border-radius: 6vw;
  background-color: #34CD1B;

  bottom: 10vw;
  right: 10vw;

  box-shadow:  0px 8px 24px RGBA(52, 205, 27, 0.35)
}

.float-button image {
  width: 100%;
  height: 100%;

  position: absolute;


  transform: scale(0.707)
}

.loading {
  color: rgb(214,245,208);
  font-size: 14px;
  text-align: center;

  height: 48px;
  line-height: 48px;
}