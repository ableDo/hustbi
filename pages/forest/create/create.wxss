@import './animate.wxss';

.container {
  display: flex;
  flex-direction: column;
}

.choose-bar {
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}

.choose-bar #chat, .choose-bar #moments {
  background-color: #fff;
  border-style:solid;
  border-width:0.2px;
  border-color: #91DE73;
  line-height: 25px;
  width: 25%;
  height: 25px;
  font-size: 15px;
  border-radius: 0;
}

.choose-bar #chat::after, .choose-bar #moments::after {
  border-radius: 0;
}

.choose-bar #chat {
  margin-left: 25%;
}
.choose-bar #moments {
  margin-right: 25%;
}

.sep {
  margin-top: 20px;
  width: 100%;
  height: 1px;
  background-color: #DADADA;
}

.content {
  width: 90%;
  margin: 0 auto;
}

.input-topic-wrapper {
  width: 90%;
  margin: 10px 5%;
  height: 50px;
}

.input-topic-wrapper #input-topic {
  width: 100%;
  background-color: #F5F5F5;
  color: #B2B2B2;
  text-align: center;
  font-size: 12px;
}

.input-detail-wrapper {
  display: block;
  margin-top: 10px;
  width: 94%;
  margin-left: 3%;
  color: #B2B2B2;
  font-size: 18px;
  flex: 1;
  min-height: 200px;
}

.input-detail-wrapper #input-detail {
  width: 100%;
  font-size: 14px;
}

.input-image-wrapper {
  height: 60px;
  box-shadow: 0 10px 15px #F5F5F5;
}

.input-image-wrapper #image {
  background-color: #000;
  height: 40px;
  width: 40px;
  margin: 10px 10px;
}

#submit {
  margin-top: 25px;
  width: 80%;
  margin-left: 10%;
  background-color: #91DE73;
  color: #fff;
}
