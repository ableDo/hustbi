.container {
  margin: 0;
  padding: 0;
  height: 100%;
  background-color: #F6F6F6;
}

.author-block {
  width: 90%;
  padding: 5% 5%;
  background-color: #fff;
  height: auto;
}

.topbar {
  /* padding-top: 23px; */
  display: flex;
  flex-direction: row;
}
.topbar .profile-wrapper {
  width: 40px;
  height: 40px;
}

.topbar .profile-wrapper image {
  width: 100%;
  height: 100%;
}
.topbar .author {
  font-size: 17px;
  margin-top: 16px;
  position: absolute;
  left: 60px;
}

.author-block .content {
  font-size: 14px;
  margin-top: 4px;
}

.author-block .topic {
  font-size: 18px;
  margin-top: 9px;
}

/* .author-block .image-wrapper {
  margin-top: 9px;
  max-width: 100%;
}

.author-block .image-wrapper image {
  height: 100%;
  width: 100%;
} */
.image-view {
  margin-top: 5px;
  text-align: center;
  align-items: center;
}
.info-bar {
  display: block;
  color: #B2B2B2;
  font-size: 14px;
  width: 100%;
  position: relative;
}

.info-bar .time, .info-bar .warn-icon-wrapper, .info-bar .favor-icon-wrapper, .info-bar .agree-num {
  display: inline-block;
}


.favor-icon-wrapper, .warn-icon-wrapper {
  width: 18px;
  height: 18px;
}

.favor-icon-wrapper image, .warn-icon-wrapper image {
  width: 100%;
  height: 100%;
}

.favor-num {
  position: absolute;
  right: 0;
}
.favor-icon-wrapper {
  position: absolute;
  right: 45px;
}
.warn-icon-wrapper {
  position: absolute;
  right: 80px;
}
.agree-num {
  position: absolute;
  right: 0;
}

.bottom-bar {
  background-color: #eef0f4;
  position: fixed;
  bottom: 0px;
  min-height: 60px;
  width: 100%;
}

.input-wrapper {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  padding-top: 20px;
}
input {
  width: 90%;
  font-size: 12px;
}

