#chat-block {
  margin-bottom: 60px;
  margin-top: 10px;
  min-height: 70px;
  width: 100%;
  background-color: #fff;
}

#chat-block .item-wrapper {
 padding: 2px 2px;
 margin: 10px 10px;
 background-color: #F6F6F6;
}

.upper {
  height: 30px;
  display: flex;
  flex-direction: row;
}

.upper .chat-profile-wrapper {
  height: 30px;
  width: 30px;
  border-radius: 25px;
}

.upper .chat-profile-wrapper image {
  width: 100%;
  height: 100%;
}
.upper .name {
  font-size: 15px;
  margin-left: 5px;
  margin-top: 5px;
}

#chat-block .lower .time {
  display: inline-block;
  color: #B2B2B2;
  font-size: 12px;
}
#chat-block .chat-content {
  font-size: 14px;
  word-break:break-all;
}
/* #chat-block .upper, .chat-block .chat-content, .chat-block .lower {
  margin: 10px 10px;
} */
.bottom-bar {
  background-color: #fff;
  position: fixed;
  bottom: 0px;
  min-height: 60px;
  width: 100%;
}

.bottom-bar button {
  margin: auto auto;
  background-color: #79E210;
}

.submit-icon-wrapper {
  margin-left: 10px;
  width: 40px;
  height: 25px;
}

.submit-icon-wrapper image {
  width: 100%;
  height: 100%;
}



#chat-block .floor {
  position: absolute;
  right: 20px;
  font-size: 12px;
  color: #B2B2B2;
  /* color: #eef0f4; */
}
#chat-block .warn-item-wrapper {
  display: inline-block;
  align-items: center;
  margin-left: 170px;
  width: 19px;
  height: 19px;
}

#chat-block .favor-item-wrapper {
  display: inline-block;
  margin-left: 5px;
  width: 16px;
  height: 16px;
}

#chat-block .warn-item-wrapper image, #chat-block .favor-item-wrapper image {
  width: 100%;
  height: 100%;
}

#chat-block .favor-num {
  text-align: center;
  align-items: center;
  display: inline-block;
  margin-right: 20px;
  color: #B2B2B2;
  font-size: 13px;
}

#total-floor {
  position: absolute;
  right: 20px;
  color: #B2B2B2;
  font-size: 12px;
}