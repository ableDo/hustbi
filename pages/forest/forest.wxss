/* pages/forest/forest.wxss */

.container {
  margin: 0;
  padding: 0;
}

.nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 20%;
}

.nav .user-info {
  flex: none;
  width: 60px;
  height: 80px;
}
.nav .user-info image {
  width: 100%;
  height: 100%;
}


.nav ul {
  width: 100%;
}
.nav ul li {
  display: inline-block;
  width: auto;
  margin-left: 20px;

}

.nav ul li image {
  width: 40px;
  height: 40px;
}

.nav ul li .topic {
  font-size: 20rpx;
  align-content: center;
  margin-top: -5px;
}

.nav .create {
  width: 60px;
  height: 80px;
  align-content: center;
  
}
.nav .create image {
  width: 40px;
  height: 40px;
}

