.container {
  margin: 0;
  padding: 0;
}

.nav {
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: row;
}

.user-info, .search, .chat, .moments, .create {
  width: 20%;
  height: 35px;
  text-align: center;
}

.user-info .image-wrapper, .search .image-wrapper, .chat .image-wrapper, .moments .image-wrapper, .create .image-wrapper {
  width: 35px;
  height: 35px;
  margin: 5px auto;
}

.user-info .image-wrapper image, .search .image-wrapper image, .chat .image-wrapper image, .moments .image-wrapper image, .create .image-wrapper image{
  width: 100%;
  height: 100%;
}
.topic{
  font-size: 14px;
  margin-top: -3px;
}

.content {
  background-color: #DADADA;
}