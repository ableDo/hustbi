/* pages/trash/trash.wxss */

page {
  height: 100%;
}

.input-wrapper {
  border-radius: 16px;
  height: 30px;
  width: 80vw;
  margin: 13px auto;
  padding: 0 15px;

  border: 1px #2C9A42 solid
}

.input-wrapper input {
  font-size: 14px;
  height: 30px;
  line-height: 30px;
}

.list-head {
  font-size: 14px;
  line-height: 20px;
  height: 20px;

  padding-bottom: 10px;

  font-weight: bold;
}

.list-head > .dot {
  display: inline-block;
  background-color: #3AB921;
  height: 20px;
  width: 20px;
  border-radius: 10px;

  transform: scale(0.2)
}

.list-head > .text {
  display: inline-block;
  color: #3AB921;
  height: 20px;

  vertical-align: top;
}

.list {
  width: 90%;
  margin: 0 auto;
  overflow: scroll;

  padding-bottom: 100px;
} 

.list .title {
  font-size: 18px;
  height: 30px;
  text-align: center;

  color: #3AB921
}

.content {
  font-size: 14px;
  color: #242424;

  padding: 1vw 5vw;

  line-height: 1.5;
}